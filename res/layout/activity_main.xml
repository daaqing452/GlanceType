<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.split_keyboard.MainActivity" >

    <ImageView
        android:id="@+id/leftkeys"
        android:layout_width="647px"
        android:layout_height="382px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/keys_left" />

    <ImageView
        android:id="@+id/rightkeys"
        android:layout_width="647px"
        android:layout_height="382px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/keys_right" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:text="start" />

    <Button
        android:id="@+id/stopbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startbutton"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/startbutton"
        android:text="stop" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stopbutton"
        android:layout_alignBottom="@+id/stopbutton"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/stopbutton"
        android:text="UNSTARTED" />

    <RadioGroup
        android:id="@+id/technique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startbutton"
        android:layout_below="@+id/startbutton"
        android:layout_marginTop="12dp" >

        <RadioButton
            android:id="@+id/eyes_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="eyes_free" />

        <RadioButton
            android:id="@+id/eyes_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eyes_focus" />

    </RadioGroup>

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/stopbutton"
        android:layout_toRightOf="@+id/leftkeys"
        android:text="text"
        android:textSize="25dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/candidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:text="candidate"
        android:textSize="15dp"
        android:typeface="monospace" />

</RelativeLayout>